<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="tracer_castor">
    <xacro:macro name="tracer_castor_joint" params="name *origin">
        <link name="${name}_castor_link">
            <visual>
                <geometry>
                    <mesh filename="package://tracer_description/models/meshes/castor_joint.dae" />
                </geometry>
            </visual>
            <collision>
                <geometry>
                    <mesh filename="package://tracer_description/models/meshes/castor_joint.dae" />
                </geometry>
            </collision>
            <inertial>
                <mass value="1" />
                <origin xyz="0 0 0" />
                <inertia ixx="0.7171" ixy="0" ixz="0" iyy="0.1361" iyz="0" izz="0.7171" />
            </inertial>
        </link>
        <joint name="${name}_castor_joint" type="continuous">
            <xacro:insert_block name="origin"/>
            <parent link="base_link"/>
            <child link="${name}_castor_link"/>
            <axis xyz="0 1 0" rpy="0 0 0" />
            <dynamics damping="1.0" friction="0.2"/>
        </joint>
    </xacro:macro>

</robot>
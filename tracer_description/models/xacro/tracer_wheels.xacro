<?xml version="1.0"?>

<robot xmlns:xacro="http://ros.org/wiki/xacro" name="tracer_wheel">
    <xacro:macro name="tracer_wheel" params="name wheel_length wheel_radius *origin">
        <link name="${name}_wheel_link">
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <mesh filename="package://tracer_description/models/meshes/tracer_wheel.dae" />
                </geometry>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="1.57 0 0" />
                <geometry>
                    <cylinder radius="${wheel_radius}" length="${wheel_length}" />
                </geometry>
            </collision>
            <inertial>
                <mass value="6" />
                <origin xyz="0 0 0" />
                <inertia ixx="0.7171" ixy="0" ixz="0" iyy="0.1361" iyz="0" izz="0.7171" />
            </inertial>
        </link>
        <joint name="${name}_wheel_joint" type="continuous">
            <parent link="base_link" />
            <child link="${name}_wheel_link" />
            <xacro:insert_block name="origin" />
            <axis xyz="0 1 0" rpy="0 0 0" />
            <limit lower="-1.79769e+308" upper="1.79769e+308" effort="20.0" velocity="5.0" />
        </joint>
    </xacro:macro>
</robot>